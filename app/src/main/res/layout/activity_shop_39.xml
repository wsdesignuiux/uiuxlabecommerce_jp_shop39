<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Shop_39">

    <include layout="@layout/toolbar" />

    <View
        android:id="@+id/viewline"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/toolbar"
        android:background="#338d8d8d" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewline">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager_shop39"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginTop="8dp"
                android:paddingLeft="23dp"
                android:paddingRight="23dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:orientation="vertical"
                android:paddingLeft="15.5dp"
                android:paddingBottom="18.5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_regular"
                    android:text="Summer dress - kentucky."
                    android:textColor="#000000"
                    android:textSize="14.5sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/sf_pro_display_regular"
                    android:text="$ 500"
                    android:textColor="#212121"
                    android:textSize="11sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#338d8d8d" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fcfcfc"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15.8dp"
                    android:paddingTop="17dp"
                    android:paddingBottom="17dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/sf_pro_display_regular"
                        android:text="SIZE"
                        android:textColor="#000000"
                        android:textSize="11sp" />

                    <ImageView
                        android:layout_width="7.5dp"
                        android:layout_height="7.5dp"
                        android:layout_marginRight="15.5dp"
                        android:src="@drawable/ic_close" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#338d8d8d" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fcfcfc">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/size_recyclerview_39"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="7dp"
                    android:overScrollMode="never"
                    android:paddingBottom="15.5dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#338d8d8d" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fcfcfc"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15.8dp"
                    android:paddingTop="17dp"
                    android:paddingBottom="17dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/sf_pro_display_regular"
                        android:text="FEATUED PRODUCTS, 348 ITEMS"
                        android:textColor="#000000"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="18dp"
                        android:fontFamily="@font/sf_pro_display_regular"
                        android:text="View All"
                        android:textColor="#000000"
                        android:textSize="11sp" />

                    <ImageView
                        android:layout_width="7.5dp"
                        android:layout_height="7.5dp"
                        android:layout_marginRight="15.5dp"
                        android:src="@drawable/ic_arrow_forward_grey" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#338d8d8d" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/product_recyclerview_39"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15.5dp"
                android:layout_marginBottom="31dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#338d8d8d" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fcfcfc"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15.8dp"
                    android:paddingTop="17dp"
                    android:paddingBottom="17dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/sf_pro_display_regular"
                        android:text="COLORS"
                        android:textColor="#000000"
                        android:textSize="11sp" />

                    <ImageView
                        android:layout_width="7.5dp"
                        android:layout_height="7.5dp"
                        android:layout_marginRight="15.5dp"
                        android:src="@drawable/ic_close" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#338d8d8d" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/color_recycler_39"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fcfcfc"
                android:overScrollMode="never"
                android:paddingBottom="15.5dp"
                android:scrollbars="none" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#338d8d8d" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fcfcfc"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15.8dp"
                    android:paddingTop="17dp"
                    android:paddingBottom="17dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/sf_pro_display_regular"
                        android:text="COMMENTS, 19"
                        android:textColor="#000000"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="18dp"
                        android:fontFamily="@font/sf_pro_display_regular"
                        android:text="Add"
                        android:textColor="#000000"
                        android:textSize="11sp" />

                    <ImageView
                        android:layout_width="7.5dp"
                        android:layout_height="7.5dp"
                        android:layout_marginRight="15.5dp"
                        android:src="@drawable/ic_arrow_forward_grey" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#338d8d8d" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/comment_recyclerview39"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15.5dp"
                android:paddingTop="18.5dp"
                android:paddingRight="14dp"
                android:paddingBottom="18.5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_like"
                    android:drawablePadding="15dp"
                    android:fontFamily="@font/ari"
                    android:text="127"
                    android:textColor="#000000"
                    android:textSize="8.6sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_shape_comment39"
                    android:drawablePadding="15dp"
                    android:fontFamily="@font/ari"
                    android:text="19 comments"
                    android:textColor="#000000"
                    android:textSize="8.6sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:drawableLeft="@drawable/ic_share_39"
                    android:drawablePadding="15dp"
                    android:fontFamily="@font/ari"
                    android:text="13"
                    android:textColor="#000000"
                    android:textSize="8.6sp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="23dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#2962ff"
        android:src="@drawable/ic_add_white"
        app:borderWidth="0dp"
        app:elevation="0dp"
        app:fabCustomSize="43dp"
        app:maxImageSize="10dp" />

</RelativeLayout>